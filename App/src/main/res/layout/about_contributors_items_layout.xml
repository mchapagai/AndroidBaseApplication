<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.mchapagai.view.MaterialCircleImageView
            android:id="@+id/contributor_avatar"
            android:layout_width="@dimen/margin_48dp"
            android:layout_height="@dimen/margin_48dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:text="@string/title_about_activity"
            app:layout_constraintLeft_toRightOf="@+id/contributor_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contributor_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/about_app_copyright"
            app:layout_constraintLeft_toRightOf="@+id/contributor_avatar"
            app:layout_constraintTop_toBottomOf="@+id/contributor_name" />

        <TextView
            android:id="@+id/contributor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/about_description"
            app:layout_constraintLeft_toRightOf="@+id/contributor_avatar"
            app:layout_constraintTop_toBottomOf="@+id/contributor_bio" />

        <TextView
            android:id="@+id/contributor_github_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:autoLink="all"
            android:text="@string/app_name"
            app:layout_constraintLeft_toRightOf="@+id/contributor_avatar"
            app:layout_constraintTop_toBottomOf="@+id/contributor_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>